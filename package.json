{
	"name": "tamachi",
	"version": "1.1.1",
	"description": "Tamachi WordPress Theme",
	"homepage": "https://github.com/garciaalvaro/tamachi",
	"author": "Alvaro Garcia",
	"private": true,
	"scripts": {
		"dev": "webpack --mode development --watch --config ./webpack/build.config.babel.js",
		"copy": "webpack --mode production --config ./webpack/copy.config.babel.js && rm _release/_temp.js",
		"version": "webpack --mode production --config ./webpack/version.config.babel.js && rm _temp.js",
		"pragma": "webpack --mode production --config ./webpack/pragma.config.babel.js && rm _release/_temp.js",
		"clean": "rm -rf build _release",
		"prebuild": "npm run type-check && npm run lint && npm run prettier && npm run clean && npm run version",
		"build": "webpack --mode production --config ./webpack/build.config.babel.js",
		"postbuild": "npm run copy && npm run pragma",
		"type-check": "tsc",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"prettier": "prettier --check 'src/**/*.{ts,tsx}'"
	},
	"dependencies": {
		"dompurify": "^2.0.17",
		"immer": "^6.0.3",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"simplebar-react": "^2.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.0",
		"@babel/preset-react": "^7.9.4",
		"@babel/preset-typescript": "^7.9.0",
		"@babel/register": "^7.9.0",
		"@types/dompurify": "2.0.1",
		"@types/lodash": "^4.14.149",
		"@types/react": "^16.9.32",
		"@types/react-dom": "^16.9.6",
		"@types/wordpress__api-fetch": "^3.2.2",
		"@types/wordpress__dom-ready": "^2.3.0",
		"@types/wordpress__i18n": "^3.4.0",
		"@types/wordpress__url": "^2.3.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"babel-loader": "^8.1.0",
		"copy-webpack-plugin": "^5.1.1",
		"css-loader": "^3.4.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"file-loader": "^6.0.0",
		"mini-css-extract-plugin": "^0.9.0",
		"nib": "^1.1.2",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"prettier": "^2.0.3",
		"string-replace-loader": "^2.2.0",
		"stylus": "^0.54.7",
		"stylus-loader": "^3.0.2",
		"typescript": "^3.8.3",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-loader-clean-pragma": "^1.0.2"
	}
}
